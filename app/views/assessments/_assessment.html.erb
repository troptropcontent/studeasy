<%= turbo_frame_tag dom_id(assessment), class: "flex justify-between px-2" do %>
  <p class="my-auto"><%= assessment.name %></p>
  <p class="my-auto hidden sm:inline"><%= assessment.deadline %></p>
  <p class="my-auto hidden sm:inline"><%= assessment.status %></p>
  <%= link_to assessment_path(assessment), data: { turbo_method: :delete } do %>
    <%= inline_svg_tag "trash-2.svg", class: "w-4 h-4" %>
  <% end %>
<% end %>
