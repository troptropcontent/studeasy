<%= turbo_frame_tag dom_id(assessment), class: "grid grid-cols-7 p-2" do %>
  <p class="my-auto"><%= assessment.name %></p>
  <p class="my-auto"><%= assessment.deadline %></p>
  <%= link_to rails_blob_path(assessment.documents.first, disposition: "attachment"), class: "m-auto" do %>
    <%= inline_svg_tag "file-text.svg", class: "w-4 h-4" %>
  <% end %>
  <p class="my-auto">-</p>
  <p class="my-auto"><%= assessment.status %></p>
  <p class="my-auto">-</p>

  <%= link_to assessment_path(assessment), class: "m-auto", data: { turbo_method: :delete } do %>
    <%= inline_svg_tag "trash-2.svg", class: "w-4 h-4" %>
  <% end %>

<% end %>
