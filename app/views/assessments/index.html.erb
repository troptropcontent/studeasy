<div>
  <section class="bg-white p-4 mb-2 rounded-md">
    <h1 class="font-bold p-2 border-solid border-b-2 border-sky-600" >My assesments</h1>
    <%= turbo_frame_tag "assessments" do %>
      <% unless @assessments.empty? %>
        <%= render @assessments %>
      <% else %>
        <%= render "assessments/no_assessment" %>
      <% end %>
    <% end %>
  </section>
  <section class="bg-white p-4 mb-2 rounded-md">
    <h1 class="font-bold p-2 border-solid border-b-2 border-sky-600">Create an new assesment</h1>
    <%= turbo_stream_from "assessments" %>
    <%= turbo_frame_tag "assessment_form" do %>
      <%= render "assessments/shared/form", assessment: @assessment %>
    <% end %>
  </section>
</div>