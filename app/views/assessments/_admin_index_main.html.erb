<div class="tab flex justify-between">
  <h1 class="text-2xl pl-2 flex-grow pt-2 pb-1">TO DO</h1>
  <div class="bg-slate-200 flex-grow rounded-tr-md flex justify-center">
    <%= link_to "IN PROGRESS", assessments_path(tab: "in_progress"), class: "text-white my-auto" %>
  </div>
  <div class="bg-slate-300 flex-grow rounded-tr-md flex justify-center">
    <%= link_to "PAST", assessments_path(tab: "past"), class: "text-white my-auto" %>
  </div>
</div>
<div class="content flex-auto">
  <div class="headers px-2 pt-2 flex justify-between border-solid border-b-2 border-slate-300">
    <h3>name</h3>
    <h3>user</h3>
    <h3 class="hidden sm:inline">deadline</h3>
    <h3 class="hidden sm:inline"> status</h3>
    <h3>actions</h3>
  </div>
  <%= turbo_frame_tag "assessments" do %>
    <%= render @assessments,
        columns: {
          "name" => nil,
          "user.email" => nil,
          "deadline" => "hidden sm:inline",
          "status" => "hidden sm:inline",
          "actions" => nil,
        },
        actions: {edit: :get}
    %>
  <% end %>
</div>
