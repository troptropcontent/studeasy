<div class="flex flex-col">
    <p>We estimated the following cost for this work :</p>
    <p><%= assessment.quote.price %></p>
</div>
<%= form_with url: orders_path do |form| %>
    <%= form.hidden_field "order[quote_id]", value: assessment.quote.id %>
    <%= form.submit "Pay", data: { turbo: false }, class: "w-full bg-slate-300 hover:bg-slate-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline" %>
<% end %>
